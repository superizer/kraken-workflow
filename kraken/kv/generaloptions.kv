
<GeneralOptions>:
    orientation: 'horizontal'
    padding: 2
    Button:
        text: 'Clear'
        on_press: root.clear(*args)
        ##background_color: (0.5,0.5,0.5,0.8)
    Button:
        text: 'Line'
        on_release: root.line(*args)
    Button:
    	text: 'Remove'
    	on_release: root.remove(*args)
    Button:
        text: 'Load'
        on_release: root.load_json(*args)
    Button:
        text: 'Save'
        on_release: root.to_json(*args)
    Button:
        text: 'Run'
        on_release: root.run(*args)
