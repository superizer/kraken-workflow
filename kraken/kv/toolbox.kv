<ToolButton@ToggleButton>:
    size_hint: None,None
    ##size: 300,48
    group: 'tool'
    canvas:
        PushMatrix:
        Translate:
            xy: self.x,self.y
    canvas.after:
        PopMatrix:

<ToolBox@GridLayout>:
    cols: 1
    ##padding: 2
    tool_rectangle: _tool_rectangle
    tool_library: _tool_select_library
    tool_function: _tool_select_function
    tool_parameter: _tool_select_parameter
    ToolRectangle:
        id: _tool_rectangle
        text: '[b]Create Component[/b]'
        size: 300,50
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    ToolSelectLibrary:
		id: _tool_select_library
		text: '[b]Select Library[/b]'
		background_color: (0.46,0.46,0.46,0.6)
		size: 300,50
		markup: True
	ToolSelectFunction:
		id: _tool_select_function
		text: '[b]Select Function[/b]'
		background_color: (0.46,0.46,0.46,0.6)
		size: 300,50
		markup: True
	ToolSelectParameter:
		id: _tool_select_parameter
		text: '[b]Select Parameter[/b]'
		size: 300,50
		background_color: (0.46,0.46,0.46,0.6)
		markup: True
		
    