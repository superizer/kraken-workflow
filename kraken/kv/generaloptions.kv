
<GeneralOptions>:
    orientation: 'horizontal'
    padding: 2
    Button:
        text: '[b]Clear[/b]'
        on_press: root.clear(*args)
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    Button:
        text: '[b]Line[/b]'
        on_release: root.line(*args)
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    Button:
    	text: '[b]Remove[/b]'
    	on_release: root.remove(*args)
    	background_color: (0.46,0.46,0.46,0.6)
    	markup: True
    Button:
        text: '[b]Load[/b]'
        on_release: root.load_json(*args)
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    Button:
        text: '[b]Save[/b]'
        on_release: root.to_json(*args)
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    Button:
        text: '[b]Run[/b]'
        on_release: root.run(*args)
        background_color: (0.46,0.46,0.46,0.6)
        markup: True
    ToggleButton:
        text: '[b]Processing Time[/b]'
        on_release: root.show_time(*args)
        background_color: (0,1,0,1)
        markup: True
