<ToolButton@ToggleButton>:
    size_hint: None,None
    ##size: 300,48
    group: 'tool'
    canvas:
        PushMatrix:
        Translate:
            xy: self.x,self.y
    canvas.after:
        PopMatrix:

<ToolBox@GridLayout>:
    cols: 1
    ##padding: 2
    tool_rectangle: _tool_rectangle
    tool_library: _tool_select_library
    tool_function: _tool_select_function
    tool_parameter: _tool_select_parameter
    ToolRectangle:
        id: _tool_rectangle
        text: 'Create Component'
        size: 300,50
    ToolSelectLibrary:
		id: _tool_select_library
		text: 'Select Library'
		size: 300,50
	ToolSelectFunction:
		id: _tool_select_function
		text: 'Select Function'
		size: 300,50
	ToolSelectParameter:
		id: _tool_select_parameter
		text: 'Select Parameter'
		size: 300,50
		
    